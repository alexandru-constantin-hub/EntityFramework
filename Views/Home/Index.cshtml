@model IEnumerable<EntityFramework.Models.Quiz>

@{
    ViewData["Title"] = "Home Page";
   

    
}
<p>Please select how many questions do you want for every section</p>

<form action="Home/CreateQuiz" method="POST">
    
    <div class="form-group mb-2 row">
       <label class="col-sm-2 col-form-label">Easy</label>
       <div class="col-sm-10">
            <input type="number" min=0 max="@(ViewBag.howmanyQuestionsEasy)" name="easy" value="0"/>
       </div>     
   </div>
   <div class="form-group mb-2 row">
       <label class="col-sm-2 col-form-label">Medium</label>
       <div class="col-sm-10">
        <input type="number" min=0 max="@(ViewBag.howmanyQuestionsMedium)" name="medium" value="0" />
       </div> 
   </div>
   <div class="form-group mb-2 row">
       <label class="col-sm-2 col-form-label">Hard</label>
       <div class="col-sm-10">
        <input type="number" min=0 max="@(ViewBag.howmanyQuestionsHard)" name="hard" value="0" />
       </div> 
   </div>
    <div class="form-group mb-2 row">
       <label class="col-sm-2 col-form-label">User</label>
       <div class="col-sm-10">
           <select name="quizId">
              @foreach (Quiz item in Model)
             {
               <option value="@item.QuizId">@item.Email</option>  
             }
         </select>
        </div> 
   </div>


  <input type="submit" value="Submit" class="btn btn-primary mb-2" />
 
</form>